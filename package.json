{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "postinstall": "git config core.hooksPath .hooks",
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "dev:postgres": "docker compose -f ./docker/docker-compose-dev.yaml up -d",
    "generate:css": "npx tailwindcss -i ./styles/tailwind.pcss -o ./app/styles/tailwind.css",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "format": "prettier --write .",
    "checkformat": "prettier -l .",
    "lint": "eslint --max-warnings=0 --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve build",
    "test": "vitest"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.4.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "@vitest/coverage-c8": "^0.24.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^7.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.4.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.1.7",
    "vite-tsconfig-paths": "^3.5.1",
    "vitest": "^0.24.1"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
